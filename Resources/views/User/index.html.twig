{% extends '@VVSSecurityBundle:base.html.twig' %}
{% block page_title  %}Пользователи {% endblock  %}
{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    
                        <table class="table table-striped table-bordered table-hover display compact table-responsive" id="table" width="100%">
                            <thead>
                                <tr>
                                    <th>Имя</th>
                                    <th>Пароль</th>
                                    <th>E-mail</th>
                                    <th>Активный</th>
                                    <th>Админ</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                    <tr>
                                      
                                        <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</td>
                                        <td>{{ entity.password }}</td>
                                        <td>{{ entity.email }}</td>
                                        <td>{{ entity.isActive }}</td>
                                        <td>{{ entity.isAdmin }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('user_show', { 'id': entity.id }) }}">Открыть</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('user_edit', { 'id': entity.id }) }}">Изменить</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Новый пользователь
            </a>
        </li>
    </ul>
{% endblock %}
