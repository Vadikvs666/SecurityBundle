{% extends 'VVSSecurityBundle::base.html.twig' %}
{% block page_title  %}Создать пользователя {% endblock  %}
{% block body %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Заполните все поля
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        {{ form_start(form) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder':'Имя пользователя'}}) }}<br>

                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder':'Пароль'}}) }}<br>


                            {{ form_widget(form.email,{'attr': {'class': 'form-control', 'placeholder':'E-mail'}} ) }}<br>

                            
			    {{ form_widget(form.role,{'attr': {'class': 'form-control', 'placeholder':'Тип учетной записи'}} ) }}<br>
                            <label>
                                {{ form_widget(form.isActive ) }}
                                Активная </label>
                                    <br>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Создать</button>
                        {{ form_end(form) }}
                    </div>
                    <!-- /.col-lg-6 (nested) -->

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <ul class="record_actions">
        <li>
            <a class="btn btn-default" href="{{ path('user_index') }}">
                Назад к списку пользователей
            </a>
        </li>
    </ul>
{% endblock %}
